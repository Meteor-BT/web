{
    "trailingComma": "all",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": false,
    "jsxSingleQuote": false,
    "bracketSpacing": true,
    "useTabs": false,
    "arrowParens": "always",
    "quoteProps": "consistent",
    "printWidth": 180,
    "overrides": [
        {
            "files": "*.{yaml,yml}",
            "options": {
                "printWidth": 80,
                "tabWidth": 2,
                "useTabs": false,
                "singleQuote": true,
                "yamlIndent": 2
            }
        }
    ]
}
